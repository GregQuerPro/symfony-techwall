{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container">
    <h1>Administration</h1>
    <div>
        <a href="{{path('admin.new')}}" class="btn btn-primary">Ajouter</a>
    </div>
    
    <div class="mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for property in properties %}
                <tr>
                    <td>{{property.title}}</td>
                    <td>
                        <a href="{{path('admin.edit', {id : property.id})}}" class="btn btn-primary">Modifier</a>
                        <form action="{{path('admin.delete', {id : property.id})}}" method="POST" style="display:inline-block" onsubmit="return confirm('Etes vous vraiment sÃ»re ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{csrf_token('delete' ~ property.id)}}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}